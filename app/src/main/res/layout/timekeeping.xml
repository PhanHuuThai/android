<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_Luu2"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_green"
        android:gravity="center"
        android:text="Lưu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/back_product"
        android:fontFamily="@font/bevan"
        android:gravity="center"
        android:text="Chấm công"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeKeeping"
        android:layout_width="413dp"
        android:layout_height="513dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <LinearLayout
                android:layout_width="393dp"
                android:layout_height="60dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="1dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <Button
                    android:layout_width="78dp"
                    android:id="@+id/btn_doanhthu"
                    android:layout_height="match_parent"
                    android:background="@drawable/img"
                    tools:ignore="SpeakableTextPresentCheck">

                </Button>

                <Button
                    android:layout_width="78dp"
                    android:id="@+id/btn_sanpham"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_2"
                    tools:ignore="SpeakableTextPresentCheck">

                </Button>

                <Button
                    android:layout_width="78dp"
                    android:id="@+id/btn_nhanvien"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_1"
                    tools:ignore="SpeakableTextPresentCheck">

                </Button>

                <Button
                    android:layout_width="78dp"
                    android:id="@+id/btn_diemdanh"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFC107"
                    android:background="@drawable/img_5"
                    tools:ignore="SpeakableTextPresentCheck">

                </Button>

                <Button
                    android:id="@+id/btn_thongtin"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_account_circle_24"
                    tools:ignore="SpeakableTextPresentCheck">

                </Button>
            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>