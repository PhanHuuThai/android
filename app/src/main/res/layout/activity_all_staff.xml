<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AllStaff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh Sách Nhân Viên:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/back_product"
        android:gravity="center"
        android:text="QUẢN LÝ NHÂN VIÊN"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_staff"
        android:layout_width="396dp"
        android:layout_height="507dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ButtonADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906"
        app:srcCompat="@drawable/ic_baseline_control_point_24"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:layout_width="78dp"
            android:id="@+id/btn_doanhthu"
            android:layout_height="match_parent"
            android:background="@drawable/img"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:layout_width="78dp"
            android:id="@+id/btn_sanpham"
            android:layout_height="match_parent"
            android:background="@drawable/img_2"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:layout_width="78dp"
            android:id="@+id/btn_nhanvien"
            android:layout_height="match_parent"
            android:background="@drawable/img_1"
            android:backgroundTint="#FFC107"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:layout_width="78dp"
            android:id="@+id/btn_diemdanh"
            android:layout_height="match_parent"
            android:background="@drawable/img_5"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:id="@+id/btn_thongtin"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_account_circle_24"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>