<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:background="@drawable/boderitems"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageFoodItem"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_weight="0.5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/ic_baseline_table_view_24" />

    <LinearLayout
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nametable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Cam ép"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/saira_medium"
            android:gravity="center"
            android:text="Số lượng"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:id="@+id/tv_totalcostfood"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/back_pink"
                android:fontFamily="@font/saira_medium"
                android:gravity="center"
                android:text="12,94"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Number"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:background="@drawable/back_pink"
            android:fontFamily="@font/saira_medium"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_Remove"
        android:layout_width="42dp"
        android:layout_height="33dp"
        android:layout_weight="0.5"
        android:background="@drawable/ic_baseline_cancel_24"
        android:text="" />
</LinearLayout>